<h1>New Song</h1>
<p>Add a new song for <%= @artist.name %></p>

<%= form_for([@artist, Song.new]) do |f| %>
  <% if @song.errors.any? %>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit %>
  <% end %>
