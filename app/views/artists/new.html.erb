<%= form_for(Artist.new) do |f| %>
  <% if @artist.errors.any? %>
    <ul>
      <% @artist.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :image_path %>
<%= f.text_field :image_path %>
<%= f.submit  %>
<% end %>
